{
  "name": "item-manage",
  "version": "1.0.0",
  "description": "Item Manage - Household item and wishlist management app",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build:client": "vite build",
    "build:server": "vite build -c vite.config.ssr.ts",
    "build": "pnpm run build:client && pnpm run build:server",
    "deploy": "wrangler deploy",
    "lint": "oxlint .",
    "fmt": "oxfmt .",
    "test": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply item-manage-db --local"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/vite-dev-server": "^0.11.0",
    "alpinejs": "^3.14.8",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.6.19",
    "html5-qrcode": "^2.3.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251231.0",
    "@types/alpinejs": "^3.13.11",
    "@typescript/native-preview": "7.0.0-dev.20251230.1",
    "drizzle-kit": "^0.31.8",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0",
    "vite": "^7.3.0",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}